{
  "Version": "2012-10-17",
  "Statement": [
    {
      "Effect": "Deny",
      "Principal": "*",
      "Action": [
        "s3:PutObject",
        "s3:GetObject",
        "s3:DeleteObject",
        "s3:ListBucket",
        "s3:ListBucketMultipartUploads",
        "s3:AbortMultipartUpload",
        "s3:GetObjectAcl",
        "s3:PutObjectAcl",
        "s3:RestoreObject"
      ],
      "Resource": [
        "${StorageBucketArn}",
        "${StorageBucketArn}/*"
      ],
      "Condition": {
        "ArnNotEquals": {
          "aws:PrincipalArn": "${ServerRoleArn}"
        }
      }
    }
  ]
}